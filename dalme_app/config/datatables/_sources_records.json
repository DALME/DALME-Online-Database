{
  "config": {
    "helpers": [
      "source_forms",
      "workflow_module",
      "ownership_filter_module"
    ],
    "globals": {
      "endpoint": "sources",
      "source_type": "records",
      "on_open_function": "source_form_setup",
      "on_close_function": "source_form_restore",
      "messages_list": {
        "create_success": "The record was created succesfully.",
        "edit_success": "The record was updated succesfully.",
        "remove_success": "The record was deleted succesfully."
      },
      "attribute_concordance": {
        "name": "name",
        "short_name": "short_name",
        "parent": "parent.id",
        "has_inventory": "has_inventory",
        "record_type": "attributes.record_type",
        "owner": "owner.id",
        "is_private": "is_private",
        "date": "attributes.date.value",
        "start_date": "attributes.start_date.value",
        "end_date": "attributes.end_date.value",
        "language": "attributes.language[].id",
        "locale": "attributes.locale[].id",
        "named_persons": "attributes.named_persons",
        "description": "attributes.description",
        "status": "workflow.status.text",
        "help_flag": "workflow.help_flag",
        "is_public": "workflow.is_public"
      },
      "required_list": [
        "name",
        "short_name",
        "type.id",
        "parent.id",
        "has_inventory",
        "attributes.record_type",
        "attributes.language[].id"
      ]
    }
  },
  "datatables": {
    "columns": [
      "name",
      "short_name",
      "parent",
      "has_inventory",
      "no_folios",
      "owner",
      "is_private",
      "attributes.locale",
      "attributes.record_type",
      "attributes.start_date",
      "attributes.end_date",
      "attributes.date",
      "attributes.language",
      "attributes.named_persons",
      "attributes.description",
      "workflow.status",
      "workflow.help_flag",
      "workflow.activity",
      "workflow.is_public"
    ],
    "options": {
      "ajax": {
        "url": "/api/sources/?format=json&class=records&mode=own"
      }
    },
    "overrides": {
      "attributes.locale": {
        "title": "Locale(s)",
        "editField": "attributes.locale[].id",
        "className": "",
        "orderable": false,
        "render": "function (data, type, row, meta) {return (typeof data == \"undefined\") ? \"\" : data.map(a => ' ' + a.name); }"
      }
    }
  },
  "editor": {
    "fields": [
      "name",
      "short_name",
      "type",
      "parent",
      "has_inventory",
      "attributes.record_type",
      "owner",
      "is_private",
      "attributes.date",
      "attributes.start_date",
      "attributes.end_date",
      "attributes.language",
      "attributes.locale",
      "attributes.named_persons",
      "attributes.description",
      "workflow.status",
      "workflow.help_flag",
      "workflow.is_public",
      "sets",
      "pages",
      "credits"
    ],
    "buttons": [
      {
        "button": "create",
        "permissions": "dalme_app.add_source"
      },
      {
        "button": "edit",
        "permissions": "dalme_app.change_source"
      },
      {
        "button": "remove",
        "permissions": "dalme_app.delete_source"
      },
      {
        "button": "create_set_from_sources",
        "permissions": "dalme_app.create_set"
      },
      {
        "button": "add_sources_to_set"
      }
    ],
    "overrides": {
      "type.id": {
        "type": "hidden",
        "def": 13,
        "opts": {},
        "options": []
      },
      "attributes.locale.id": {
        "name": "attributes.locale[].id",
        "label": "Locale(s)",
        "opts": {
          "placeholder": "Select locale(s)",
          "preload": "focus",
          "maxItems": null,
          "plugins": ["remove_button"],
          "closeAfterSelect": true
        }
      },
      "parent.id": {
        "options": {
            "type": "api_call",
            "url": "/api/sources/?format=select&type__lt=13&search="
        }
      }
    }
  }
}
