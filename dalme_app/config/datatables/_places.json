{
  "config": {
    "globals": {
      "endpoint": "places",
      "messages_list": {
        "create_success": "The place was created succesfully.",
        "edit_success": "The place was updated succesfully.",
        "remove_success": "The place was deleted succesfully."
      },
      "attribute_concordance": {
        "standard_name": "standard_name",
        "locale": "locale.id",
        "notes": "notes"
      },
      "required_list": [
        "standard_name"
      ]
    }
  },
  "datatables": {
    "columns": [
      "standard_name",
      "locale",
      "notes"
    ],
    "options": {
      "ajax": {
        "url": "places/?format=json"
      }
    }
  },
  "editor": {
    "fields": [
      "standard_name",
      "locale",
      "notes"
    ],
    "buttons": [
      {
        "button": "create",
        "permissions": "dalme_app.add_place"
      },
      {
        "button": "edit",
        "permissions": "dalme_app.change_place"
      },
      {
        "button": "remove",
        "permissions": "dalme_app.delete_place"
      }
    ]
  }
}
