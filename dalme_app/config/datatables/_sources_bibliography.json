{
  "config": {
    "helpers": [
      "source_forms"
    ],
    "template_field_container": "#form-field-container",
    "endpoint": "sources",
    "globals": {
      "source_type": "bibliography",
      "on_open_function": "source_form_setup",
      "on_close_function": "source_form_restore",
      "messages_list": {
        "create_success": "The source was created succesfully.",
        "edit_success": "The source was updated succesfully."
      },
      "attribute_concordance": {
        "name": "name",
        "short_name": "short_name",
        "type": "type.id",
        "parent": "parent.id",
        "language": "attributes.language",
        "url": "attributes.url"
      },
      "required_list": [
        "name",
        "short_name",
        "type.id"
      ]
    }
  },
  "datatables": {
    "columns": [
      "name",
      "short_name",
      "type",
      "parent",
      "attributes.language",
      "attributes.url"
    ],
    "options": {
      "ajax": {
        "url": "/api/sources/?format=json&class=bibliography"
      }
    }
  },
  "editor": {
    "fields": [
      "name",
      "short_name",
      "parent",
      "type",
      "attributes.language",
      "attributes.url"
    ],
    "options": {
      "ajax": {
        "create": {
          "url": "/api/sources/"
        },
        "edit": {
          "url": "/api/sources/_id_/"
        },
        "remove": {
          "url": "/api/sources/_id_/"
        }
      },
      "template": "#source-form-template"
    },
    "buttons": [
      {
        "button": "create",
        "permissions": "dalme_app.add_source"
      },
      {
        "button": "edit",
        "permissions": "dalme_app.change_source"
      },
      {
        "button": "remove",
        "permissions": "dalme_app.delete_source"
      }
    ],
    "overrides": {
      "type.id": {
        "options": {
          "type": "api_call",
          "url": "/api/content_types/?format=select&context=bibliography&q="
        }
      },
      "name": {
        "type": "textarea"
      }
    }
  }
}
