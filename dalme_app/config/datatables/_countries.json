{
  "config": {
    "endpoint": "countries",
    "globals": {
      "messages_list": {
        "create_success": "The country was created succesfully.",
        "edit_success": "The country was updated succesfully.",
        "remove_success": "The country was deleted succesfully."
      },
      "attribute_concordance": {
        "name": "name",
        "alpha_2_code": "alpha_2_code",
        "alpha_3_code": "alpha_3_code",
        "num_code": "num_code"
      },
      "required_list": [
        "name",
        "alpha_2_code",
        "alpha_3_code",
        "num_code"
      ]
    }
  },
  "datatables": {
    "columns": [
      "id",
      "name",
      "alpha_2_code",
      "alpha_3_code",
      "num_code"
    ],
    "options": {
      "ajax": {
        "url": "/api/countries/?format=json"
      }
    }
  },
  "editor": {
    "fields": [
      "name",
      "alpha_2_code",
      "alpha_3_code",
      "num_code"
    ],
    "options": {
      "ajax": {
        "create": {
          "url": "/api/countries/"
        },
        "edit": {
          "url": "/api/countries/_id_/"
        },
        "remove": {
          "url": "/api/countries/_id_/"
        }
      }
    },
    "buttons": [
      {
        "button": "create",
        "permissions": "dalme_app.add_country"
      },
      {
        "button": "edit",
        "permissions": "dalme_app.change_country"
      },
      {
        "button": "remove",
        "permissions": "dalme_app.delete_country"
      }
    ]
  }
}
