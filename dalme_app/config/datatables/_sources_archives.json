{
  "config": {
    "helpers": [
      "source_forms"
    ],
    "template_field_container": "#form-field-container",
    "endpoint": "sources",
    "globals": {
      "source_type": "archives",
      "on_open_function": "source_form_setup",
      "on_close_function": "source_form_restore",
      "messages_list": {
        "create_success": "The source was created succesfully.",
        "edit_success": "The source was updated succesfully."
      },
      "attribute_concordance": {
        "name": "name",
        "short_name": "short_name",
        "city": "attributes.city",
        "country": "attributes.country",
        "default_rights": "attributes.default_rights.value",
        "url": "attributes.url",
        "street_address": "attributes.street_address",
        "email": "attributes.email"
      },
      "required_list": [
        "name",
        "short_name",
        "attributes.city",
        "attributes.country"
      ]
    }
  },
  "datatables": {
    "columns": [
      "name",
      "short_name",
      "attributes.city",
      "attributes.country",
      "attributes.default_rights",
      "attributes.url"
    ],
    "options": {
      "ajax": {
        "url": "/api/sources/?format=json&class=archives"
      }
    }
  },
  "editor": {
    "fields": [
      "name",
      "short_name",
      "type",
      "attributes.city",
      "attributes.country",
      "attributes.default_rights",
      "attributes.url",
      "attributes.street_address",
      "attributes.email"
    ],
    "options": {
      "ajax": {
        "create": {
          "url": "/api/sources/"
        },
        "edit": {
          "url": "/api/sources/_id_/"
        },
        "remove": {
          "url": "/api/sources/_id_/"
        }
      },
      "template": "#source-form-template"
    },
    "buttons": [
      {
        "button": "create",
        "permissions": "dalme_app.add_source"
      },
      {
        "button": "edit",
        "permissions": "dalme_app.change_source"
      },
      {
        "button": "remove",
        "permissions": "dalme_app.delete_source"
      }
    ],
    "overrides": {
      "type.id": {
        "type": "hidden",
        "def": 19,
        "opts": {},
        "options": []
      }
    }
  }
}
